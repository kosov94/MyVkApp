<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_vk_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/authLogin"
            android:layout_marginTop="80dp"/>


    <EditText
            android:id="@+id/authLogin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Login"
            android:inputType="text"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toTopOf="@+id/authPassword"/>

    <EditText
            android:id="@+id/authPassword"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSignIn"/>

    <!-- Login Button -->

    <Button
            android:id="@+id/btnSignIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:background="@drawable/auth_button"
            android:backgroundTint="@color/colorPrimary"
            android:text="Sign in"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnSignUp"/>
    <Button
            android:id="@+id/btnSignUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/white"
            android:background="@drawable/auth_button"
            android:text="Sign up"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="132dp" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
